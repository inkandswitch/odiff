{
  "compilerOptions": {
    "outDir": "./dist", // just in case
    "sourceMap": true,
    "lib": ["es2015", "es2017"],
    "module": "commonjs",
    "target": "es5",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, // prevents type errors in third-party libs, but also no type checking for our .d.ts files
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true
  },
  "files": ["odiff.js"]
}
